@model IEnumerable<TestePratico.Web.ViewModels.UFViewModel>

@{
	ViewData["Title"] = "UFs";
}

<h2>UFs</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table table-bordered table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(m => m.Name)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.PeopleCount)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().CreatedAt)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().UpdatedAt)
		</th>
		<th></th>
	</tr>

	@if (Model.Count() > 0)
	{
		foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PeopleCount)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UpdatedAt)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.UFId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.UFId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.UFId">Delete</a>
				</td>
			</tr>
		}
	}
	else
	{
		<tr>
			<td colspan="7" class="text-muted text-center">No record found.</td>
		</tr>
	}


</table>
