@model TestePratico.Web.ViewModels.UFViewModel

<div class="form-horizontal">
    <h4>Data</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    @if (Model?.UFId > 0)
    {
        <div class="form-group">
            <label asp-for="CreatedAt" class="form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="CreatedAt" class="form-control" disabled />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UpdatedAt" class="form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="UpdatedAt" class="form-control" disabled />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="form-group row pt-3">
        <div class="col-md-offset-2 col-md-1">
            <button type="submit" class="btn btn-secondary">Save</button>
        </div>
        <div class="col-md-1">
            <a asp-controller="UFs" asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>
