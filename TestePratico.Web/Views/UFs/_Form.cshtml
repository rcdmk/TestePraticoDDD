@model TestePratico.Web.ViewModels.UFViewModel

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Dados</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-1">
            <button type="submit" class="btn btn-outline-secondary">Gravar</button>
        </div>
        <div class="col-md-1">
            <a asp-controller="UFs" asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</div>
