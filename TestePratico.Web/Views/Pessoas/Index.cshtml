@model IEnumerable<TestePratico.Web.ViewModels.PessoaViewModel>

@{
	ViewData["Title"] = "Pessoas";
}

<h2>Index</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Criar</a>
</p>
<table class="table table-bordered table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(m => m.First().Nome)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().DataNascimento)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().DDD)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().Telefone)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().Email)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().UFId)
		</th>
		<th class="col-2"></th>
	</tr>

	@if (Model.Count() > 0)
	{
		foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataNascimento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DDD)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UF)
				</td>
				<td class="text-center">
					<a asp-action="Edit" asp-route-id="@item.PessoaId">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.PessoaId">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.PessoaId">Excluir</a>
				</td>
			</tr>
		}
	}
	else
	{
		<tr>
			<td colspan="7" class="text-muted text-center">Nenhum registro cadastrado.</td>
		</tr>
	}
</table>
