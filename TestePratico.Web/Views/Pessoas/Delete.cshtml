@model TestePratico.Web.ViewModels.PersonViewModel

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<h2>Excluir Pessoa</h2>

<h3>Tem certeza que deseja excluir esta pessoa?</h3>
<div>
    <partial name="_Display" for="@Model"></partial>

    <form asp-controller="Pessoas" asp-action="Delete" method="post">
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-secondary">Confirmar Exclusão</button>
            &nbsp;
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>
