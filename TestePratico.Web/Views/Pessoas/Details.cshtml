@model TestePratico.Web.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Detalhes da Pessoa: " + Model.Nome;
}

<h2>Detalhes</h2>

<div>
    <h4>Dados</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Nome"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)

        </dd>

        <dt class="col-sm-2">
            <label asp-for="DataNascimento"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt class="col-sm-2">
            <label asp-for="DDD"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DDD)
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Telefone"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Email"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            <label asp-for="UFId"></label>
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UF)
        </dd>

    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.PessoaId" class="btn btn-default">Editar</a>
    &nbsp;
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</p>
