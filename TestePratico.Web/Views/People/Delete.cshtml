@model TestePratico.Web.ViewModels.PersonViewModel

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Delete Person</h2>

<h3>Are you sure you want to delete this person?</h3>
<div>
    <partial name="_Display" for="@Model"></partial>

    <form asp-controller="People" asp-action="Delete" method="post">
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-secondary">Confirm</button>
            &nbsp;
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>
