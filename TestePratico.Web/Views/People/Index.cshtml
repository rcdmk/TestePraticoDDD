@model IEnumerable<TestePratico.Web.ViewModels.PersonViewModel>

@{
	ViewData["Title"] = "People";
}

<h2>Index</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table table-bordered table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(m => m.First().Name)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().Birthdate)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().AreaCode)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().Phone)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().Email)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().UFId)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().CreatedAt)
		</th>
		<th>
			@Html.DisplayNameFor(m => m.First().UpdatedAt)
		</th>
		<th class="col-2"></th>
	</tr>

	@if (Model.Count() > 0)
	{
		foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Birthdate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AreaCode)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Phone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UF)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UpdatedAt)
				</td>
				<td class="text-center">
					<a asp-action="Edit" asp-route-id="@item.PersonId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.PersonId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.PersonId">Delete</a>
				</td>
			</tr>
		}
	}
	else
	{
		<tr>
			<td colspan="7" class="text-muted text-center">No record found.</td>
		</tr>
	}
</table>
